<component type="desktop-application">
	<id>com.github.Darazaki.Spedread</id>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>GPL-3.0-or-later</project_license>
    <launchable type="desktop-id">com.github.Darazaki.Spedread.desktop</launchable>
    <name translatable="no">Spedread</name>
	<developer_name translatable="no">Naqua Darazaki</developer_name>
	<translation type="gettext">spedread</translation>
	<update_contact>n.darazaki@gmail.com</update_contact>
	<recommends>
		<control>pointing</control>
		<control>keyboard</control>
		<control>touch</control>
	</recommends>
	<summary>GTK speed reading software: Read like a speedrunner!</summary>
	<description>
		<p>Read like a speedrunner!</p>
		<p>
			This program will show one word at a time rapidly to allow focusing
			on the general idea rather than single words along with less eye
			movements.
		</p>
	</description>
	<screenshots>
		<screenshot type="default">
			<image>https://raw.githubusercontent.com/Darazaki/Spedread/v2/demo.gif</image>
		</screenshot>
	</screenshots>
	<url type="homepage">https://github.com/Darazaki/Spedread</url>
	<url type="bugtracker">https://github.com/Darazaki/Spedread/issues</url>
	<content_rating type="oars-1.1" />
	<custom>
		<value key="Purism::form_factor">workstation</value>
		<!-- TODO: <value key="Purism::form_factor">mobile</value> -->
	</custom>
	<releases>
		<release version="2.0.0" date="2021-12-24">
            <description>
                <p>New:</p>
                <ul>
                    <li>Previous/next word buttons</li>
					<li>Highlight and follow current word</li>
                </ul>
				<p>Changes:</p>
				<ul>
					<li>Ported from C + GTK3 to Vala + GTK4</li>
				</ul>
            </description>
        </release>
	</releases>
</component>
